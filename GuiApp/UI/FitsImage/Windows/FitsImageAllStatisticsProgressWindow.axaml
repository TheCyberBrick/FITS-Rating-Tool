<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fitsimage_vm="using:FitsRatingTool.GuiApp.UI.FitsImage.ViewModels"
        xmlns:controls="clr-namespace:FitsRatingTool.GuiApp.UI.Controls"
        mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="148"
        Width="200" Height="148"
        UseLayoutRounding="True"
        x:Class="FitsRatingTool.GuiApp.UI.FitsImage.Windows.FitsImageAllStatisticsProgressWindow"
        Icon="/Assets/Icons/hourglass.png"
        Title="Analyzing Images..."
        Foreground="#FFECECEC"
        FontFamily="Tahoma"
        FontSize="10.5"
        WindowStartupLocation="CenterOwner"
        Classes="nominimize nomaximize">

  <Window.Styles>
    <Style Selector="Window">
      <Setter Property="controls:WindowExtensions.TitleIcon">
        <Template>
          <Image Source="/Assets/Icons/hourglass.png"/>
        </Template>
      </Setter>
    </Style>
  </Window.Styles>

  <Grid ColumnDefinitions="*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,*" ClipToBounds="True">
    <TextBlock Grid.Column="0" Grid.Row="0">
      <TextBlock.Text>
        <MultiBinding StringFormat="Image {0}/{1}  {2}" Mode="OneWay">
          <Binding Path="CurrentImage" FallbackValue="-"/>
          <Binding Path="NumberOfImages" FallbackValue="-"/>
          <Binding Path="CurrentImageFileName" FallbackValue="-"/>
        </MultiBinding>
      </TextBlock.Text>
    </TextBlock>
    <TextBlock Grid.Column="0" Grid.Row="1" Text="{Binding Phase, StringFormat=Phase: {0}, FallbackValue=Phase: -, Mode=OneWay}" Margin="6 0 0 0"/>
    <TextBlock Grid.Column="0" Grid.Row="2" Margin="6 0 0 0">
      <TextBlock.Text>
        <MultiBinding StringFormat="Object {0}/{1}" Mode="OneWay">
          <Binding Path="CurrentObject" FallbackValue="-"/>
          <Binding Path="NumberOfObjects" FallbackValue="-"/>
        </MultiBinding>
      </TextBlock.Text>
    </TextBlock>
    <TextBlock Grid.Column="0" Grid.Row="3" Text="{Binding NumberOfStars, StringFormat=Stars: {0}, FallbackValue=Stars: -, Mode=OneWay}" Margin="6 0 0 0"/>
    <ProgressBar Grid.Column="0" Grid.Row="4" Value="{Binding ProgressValue}" Maximum="1.0" Height="15" Margin="0 4"/>
    <Button Grid.Column="0" Grid.Row="5"
            Command="{Binding Cancel}"
            HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
            VerticalAlignment="Bottom">
      <Grid ColumnDefinitions="Auto,10,*">
        <TextBlock Grid.Column="0"
                   Text="Cancel"
                   HorizontalAlignment="Left"
                   Margin="4 0 0 0"/>
        <Viewbox Grid.Column="2"
                 Width="16" Height="16"
                 HorizontalAlignment="Right"
                 Margin="-2 -2 -2 -3">
          <Image Source="/Assets/Icons/close.png"/>
        </Viewbox>
      </Grid>
    </Button>
  </Grid>


</Window>
